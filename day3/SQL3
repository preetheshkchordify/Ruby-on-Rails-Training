Insert student_Details values into the table student_Details

CREATE TABLE student_Details (
StdID int,
StdName varchar(255),
Sex varchar(255),
Percentage int,
Class int,
Sec varchar(255),
Stream varchar(255),
DOB date
);
select * from student_Details;
