<h1>Products</h1>
<div>
  <% @products.each do |product| %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Price</th>
          <th>Count</th>

          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.count %></td>

          <td><%= link_to 'Show', product_path(product) %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>